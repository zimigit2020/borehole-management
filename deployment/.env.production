# Production Environment Variables for DigitalOcean
NODE_ENV=production
PORT=8080
API_PREFIX=api/v1

# Database - DigitalOcean Managed PostgreSQL (Frankfurt)
DATABASE_URL=YOUR_DATABASE_URL_HERE

# JWT Authentication - CHANGE THIS!
JWT_SECRET=change-this-to-a-very-secure-random-string-min-32-chars
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# DigitalOcean Spaces (Frankfurt) - UPDATE AFTER CREATING SPACES
DO_SPACES_ENDPOINT=https://fra1.digitaloceanspaces.com
DO_SPACES_KEY=YOUR_SPACES_KEY_HERE
DO_SPACES_SECRET=YOUR_SPACES_SECRET_HERE
DO_SPACES_BUCKET=borehole-files
DO_SPACES_REGION=fra1

# CORS - Update with your app URL after deployment
CORS_ORIGIN=https://borehole-management.ondigitalocean.app

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf